---
import BaseLayout from '../layouts/BaseLayout.astro';
import '../styles/global.css';

const services = [
  {
    title: 'Plumbing Repair & Maintenance',
    description: 'From dripping faucets to major pipe repairs, our licensed plumbers diagnose and fix problems fast. We carry common parts on our trucks for same-day repairs.',
    icon: 'wrench',
  },
  {
    title: 'Drain Cleaning & Sewer Service',
    description: 'Stubborn clogs, slow drains, and sewer line issues. We use professional-grade equipment including hydro jetting and camera inspection to get things flowing again.',
    icon: 'funnel',
  },
  {
    title: 'Water Heater Services',
    description: 'Tank and tankless water heater installation, repair, and replacement. We help you choose the right system for your home and budget, with same-day installation available.',
    icon: 'fire',
  },
  {
    title: 'Furnace & Heating Repair',
    description: 'Furnace not working? Our HVAC technicians service all major brands. We offer emergency heating repair, annual tune-ups, and complete system replacements.',
    icon: 'sun',
  },
  {
    title: 'Bathroom & Kitchen Remodels',
    description: 'Expert plumbing for your renovation project. We handle rough-in plumbing, fixture installation, and everything in between to bring your remodel vision to life.',
    icon: 'home',
  },
  {
    title: 'Gas Line Services',
    description: 'Licensed gas line installation, repair, and leak detection. Whether you\'re adding a gas appliance or suspect a leak, we handle it safely and up to code.',
    icon: 'bolt',
  },
  {
    title: 'Water Treatment & Filtration',
    description: 'Utah\'s hard water can damage your pipes and appliances. We install water softeners, filtration systems, and reverse osmosis units to protect your home.',
    icon: 'beaker',
  },
  {
    title: '24/7 Emergency Service',
    description: 'Burst pipes, gas leaks, and no-heat emergencies don\'t wait for business hours. Our on-call technicians are available around the clock, 365 days a year.',
    icon: 'clock',
  },
];
---

<BaseLayout
  title="Plumbing & Heating Services | Summit Plumbing & Heating"
  description="Full-service plumbing and heating for Salt Lake City. Drain cleaning, water heaters, furnace repair, remodels, gas lines, and 24/7 emergency service."
>
  <!-- Hero -->
  <section class="bg-navy-950 text-white py-16">
    <div class="max-w-6xl mx-auto px-4">
      <p class="text-accent-400 font-semibold mb-3 text-sm uppercase tracking-wide">What We Do</p>
      <h1 class="text-4xl md:text-5xl font-extrabold mb-4">Our Services</h1>
      <p class="text-lg text-gray-300 max-w-2xl">
        Comprehensive plumbing and heating solutions for homes and businesses across the Salt Lake City area. All work guaranteed.
      </p>
    </div>
  </section>

  <!-- Services Grid -->
  <section class="py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8">
        {services.map((service) => (
          <div class="flex gap-5 p-6 bg-white rounded-xl border border-gray-100 hover:border-navy-200 hover:shadow-md transition-all">
            <div class="flex-shrink-0 w-14 h-14 bg-navy-950 rounded-xl flex items-center justify-center">
              {service.icon === 'wrench' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M11.42 15.17 17.25 21A2.652 2.652 0 0 0 21 17.25l-5.877-5.877M11.42 15.17l2.496-3.03c.317-.384.74-.626 1.208-.766M11.42 15.17l-4.655 5.653a2.548 2.548 0 1 1-3.586-3.586l6.837-5.63m5.108-.233c.55-.164 1.163-.188 1.743-.14a4.5 4.5 0 0 0 4.486-6.336l-3.276 3.277a3.004 3.004 0 0 1-2.25-2.25l3.276-3.276a4.5 4.5 0 0 0-6.336 4.486c.091 1.076-.071 2.264-.904 2.95l-.102.085m-1.745 1.437L5.909 7.5H4.5L2.25 3.75l1.5-1.5L7.5 4.5v1.409l4.26 4.26m-1.745 1.437 1.745-1.437m6.615 8.206L15.75 15.75M4.867 19.125h.008v.008h-.008v-.008Z" />
                </svg>
              )}
              {service.icon === 'funnel' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3c2.755 0 5.455.232 8.083.678.533.09.917.556.917 1.096v1.044a2.25 2.25 0 0 1-.659 1.591l-5.432 5.432a2.25 2.25 0 0 0-.659 1.591v2.927a2.25 2.25 0 0 1-1.244 2.013L9.75 21v-6.568a2.25 2.25 0 0 0-.659-1.591L3.659 7.409A2.25 2.25 0 0 1 3 5.818V4.774c0-.54.384-1.006.917-1.096A48.32 48.32 0 0 1 12 3Z" />
                </svg>
              )}
              {service.icon === 'fire' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M15.362 5.214A8.252 8.252 0 0 1 12 21 8.25 8.25 0 0 1 6.038 7.047 8.287 8.287 0 0 0 9 9.601a8.983 8.983 0 0 1 3.361-6.867 8.21 8.21 0 0 0 3 2.48Z" />
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 18a3.75 3.75 0 0 0 .495-7.468 5.99 5.99 0 0 0-1.925 3.547 5.975 5.975 0 0 1-2.133-1.001A3.75 3.75 0 0 0 12 18Z" />
                </svg>
              )}
              {service.icon === 'sun' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 3v2.25m6.364.386-1.591 1.591M21 12h-2.25m-.386 6.364-1.591-1.591M12 18.75V21m-4.773-4.227-1.591 1.591M5.25 12H3m4.227-4.773L5.636 5.636M15.75 12a3.75 3.75 0 1 1-7.5 0 3.75 3.75 0 0 1 7.5 0Z" />
                </svg>
              )}
              {service.icon === 'home' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m2.25 12 8.954-8.955c.44-.439 1.152-.439 1.591 0L21.75 12M4.5 9.75v10.125c0 .621.504 1.125 1.125 1.125H9.75v-4.875c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125V21h4.125c.621 0 1.125-.504 1.125-1.125V9.75M8.25 21h8.25" />
                </svg>
              )}
              {service.icon === 'bolt' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="m3.75 13.5 10.5-11.25L12 10.5h8.25L9.75 21.75 12 13.5H3.75Z" />
                </svg>
              )}
              {service.icon === 'beaker' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M9.75 3.104v5.714a2.25 2.25 0 0 1-.659 1.591L5 14.5M9.75 3.104c-.251.023-.501.05-.75.082m.75-.082a24.301 24.301 0 0 1 4.5 0m0 0v5.714c0 .597.237 1.17.659 1.591L19.8 15.3M14.25 3.104c.251.023.501.05.75.082M19.8 15.3l-1.57.393A9.065 9.065 0 0 1 12 15a9.065 9.065 0 0 0-6.23.693L5 14.5m14.8.8 1.402 1.402c1.232 1.232.65 3.318-1.067 3.611A48.309 48.309 0 0 1 12 21c-2.773 0-5.491-.235-8.135-.687-1.718-.293-2.3-2.379-1.067-3.61L5 14.5" />
                </svg>
              )}
              {service.icon === 'clock' && (
                <svg class="w-7 h-7 text-accent-400" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M12 6v6h4.5m4.5 0a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
              )}
            </div>
            <div>
              <h3 class="font-bold text-lg text-navy-950 mb-2">{service.title}</h3>
              <p class="text-gray-600 text-sm leading-relaxed">{service.description}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-navy-950 py-16">
    <div class="max-w-4xl mx-auto px-4 text-center text-white">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Need a Plumber? Call Summit.</h2>
      <p class="text-gray-300 mb-8 text-lg">Free estimates on all jobs. No hidden fees. Just honest work at fair prices.</p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a href="tel:+18015550199" class="inline-flex items-center justify-center gap-2 bg-accent-500 hover:bg-accent-600 text-white font-bold px-8 py-4 rounded-lg text-lg transition-colors">
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
          </svg>
          (801) 555-0199
        </a>
        <a href="/contact" class="inline-flex items-center justify-center bg-white/10 hover:bg-white/20 text-white font-semibold px-8 py-4 rounded-lg transition-colors">
          Request Free Estimate
        </a>
      </div>
    </div>
  </section>

  <div class="h-16 md:hidden"></div>
</BaseLayout>
